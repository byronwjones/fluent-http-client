<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RootNamespace>BWJ.Net.Http</RootNamespace>
    <Version>0.3.2</Version>
    <Authors>Byron Jones</Authors>
    <Product>FluentHttpClient</Product>
    <Company>Byron Jones LLC</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/byronwjones/fluent-http-client</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>HttpClient, Fluent API</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
